<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Lyser.Views"
            x:Class="Lyser.Views.MainPage">
    <TabbedPage.Children>

        <NavigationPage Title="Home">
            <x:Arguments>
                <views:HomeView />
            </x:Arguments>
        </NavigationPage>
        
        <NavigationPage Title="Calc">
            <x:Arguments>
                <views:DrugsView />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
